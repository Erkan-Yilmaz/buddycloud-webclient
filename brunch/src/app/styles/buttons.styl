.basic_button
  padding 5px 21px
  color #fff
  border 1px solid rgba(0,0,0,.34)
  background-color #83AC35
  border-radius 3px
  opacity .89
  cursor pointer
  box-shadow inset 0 0 1px rgba(255,255,255,.54)

.basic_button:hover
  opacity 1
  
.basic_button:active
  position relative
  top 1px
  
.basic_button.small
  padding 3px 13px 2px
  font-size 12px
  
button
  padding 1px 5px
  color rgba(0,0,0,.89)
  text-shadow 0 1px rgba(255,255,255,.34)
  linear-bg-gradient(rgba(0,0,0,.03), rgba(0,0,0,.08))
  border 1px solid rgba(0,0,0,.21)
  border-radius 2px
  box-shadow inset 0 1px rgba(255,255,255,.55), 0 1px rgba(0,0,0,.05)
  cursor pointer
  &.main
    font-weight bold