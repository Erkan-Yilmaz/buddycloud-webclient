.button
  padding 0 13px
  font-size 11px
  line-height 23px
  font-weight bold
  color black
  text-shadow 0 1px rgba(255,255,255,.75)
  border 1px solid rgba(0,0,0,.21)
  border-bottom-color rgba(0,0,0,.34)
  background-color rgba(255,255,255,.89)
  linear-bg-gradient transparent, rgba(0,0,0,.13)
  border-radius 3px
  cursor pointer
  box-shadow inset 0 1px rgba(255,255,255,.89), 0 1px rgba(0,0,0,.08)
  display inline-block
  transition 250ms

  &:hover
    linear-bg-gradient transparent, rgba(0,0,0,.03)
  
  &:active
    linear-bg-gradient rgba(0,0,0,.13), transparent
    position relative
    top 1px
  
  &.tall
    padding 5px 21px
    font-size 13px
  
  &.small
    height 20px
    padding 0 10px
    font-size 11px
    line-height 22px
    border-radius 3px
  
  &.callToAction
    color white
    border-color rgba(0,0,0,.34)
    background-color #83AC35
    box-shadow inset 0 0 1px rgba(255,255,255,.55)
  
  &.prominent
    font-weight bold
    
  &.checkbox
    padding-left 1px
    
  &.dark
    background-color rgba(0,0,0,.13)
    box-shadow inset 0 1px rgba(255,255,255,.89), 0 1px rgba(0,0,0,.05)
    
  &.light
    background-color white
    border-color rgba(255,255,255,.21)
    box-shadow inset 0 1px rgba(255,255,255,.89), 0 1px rgba(0,0,0,.89)