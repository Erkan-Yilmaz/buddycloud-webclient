// MIXINS

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args

animation()
  vendor('animation', arguments)

border-radius()
  vendor('border-radius', arguments)

border-top-radius() 
  vendor('border-top-left-radius', arguments)
  vendor('border-top-right-radius', arguments)

border-bottom-radius() 
  vendor('border-bottom-left-radius', arguments)
  vendor('border-bottom-right-radius', arguments)

border-top-right-radius()
  vendor('border-top-right-radius', arguments)

border-bottom-left-radius()
  vendor('border-bottom-left-radius', arguments)
  
border-bottom-right-radius()
  vendor('border-bottom-right-radius', arguments)

linear-bg-gradient()
  //background-image -webkit-gradient(linear, left top, left bottom, from(from), to(to))
  background-image -webkit-linear-gradient(top, arguments)
  background-image -moz-linear-gradient(top, arguments)
  background-image -o-linear-gradient(top, arguments)
  background-image -ms-linear-gradient(top, arguments)
  background-image linear-gradient(top, arguments)
  
radial-bg-gradient(shape, from, to)
  background-image -webkit-gradient(radial, 50% 50%, 0, 50% 50%, 100%, from(from), to(to))
  background-image -webkit-radial-gradient(center center, shape, from, to)
  background-image -moz-radial-gradient(center center, circle shape, from, to)
  background-image -o-radial-gradient(center center, shape, from, to)
  background-image -ms-radial-gradient(center center, shape, from, to)
  background-image radial-gradient(center center, shape, from, to)
  
background-clip()
  vendor('background-clip', arguments)

box-shadow() 
  -moz-box-shadow arguments
  -webkit-box-shadow arguments
  box-shadow arguments

box(orient, pack, align) 
  display -webkit-box
  display -moz-box
  display box
  vendor('box-orient', orient)
  vendor('box-pack', pack)
  vendor('box-align', align)
  vendor('box-lines', multiple)

box-flex()
  vendor('box-flex', arguments)
  
box-sizing()
  vendor('box-sizing', arguments)

text-fill-color()
  vendor('text-fill-color', arguments)
  
transform()
  vendor('transform', arguments)
  
transform-origin()
  vendor('transform-origin', arguments)

transition()
  vendor('transition', arguments)
  
transition-delay()
  vendor('transition-delay', arguments)
  
transform-style()
  vendor('transform-style', arguments)
  
perspective()
  vendor('perspective', arguments)
  
user-select()
  vendor('user-select', arguments)
  
.clearfix:after
  content ""
  clear both
  display block
  height 0